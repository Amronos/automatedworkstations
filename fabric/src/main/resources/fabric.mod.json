{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}",
        "Shotwave"
    ],
    "contact": {
        "email": "amronos275@gmail.com",
        "homepage": "https://modrinth.com/project/automatedworkstations",
        "issues": "https://github.com/Amronos/automatedworkstations/issues",
        "sources": "https://github.com/Amronos/automatedworkstations"
    },
    "license": "${license}",
    "icon": "${mod_id}.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.amronos.automatedworkstations.AutomatedWorkstations"
        ],
        "client": [
          "com.amronos.automatedworkstations.AutomatedWorkstationsClient"
        ],
        "emi": [
            "com.amronos.automatedworkstations.AutomatedWorkstationsEmiPlugin"
        ],
        "jei_mod_plugin": [
            "com.amronos.automatedworkstations.AutomatedWorkstationsJeiPlugin"
        ]
    },
    "mixins": [
        "${mod_id}.mixins.json",
        "${mod_id}.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=${fabric_loader_version}",
        "fabric-api": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=${java_version}"
    },
    "suggests": {
        "emi": "${emi_version}",
        "jei": "${jei_version}",
        "modmenu": "${modmenu_version}"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.curseforge": "https://www.curseforge.com/minecraft/mc-mods/automated-workstations",
                "modmenu.discord": "https://discord.com/invite/kS3crKaryx",
                "modmenu.donate": "https://ko-fi.com/amronos",
                "modmenu.kofi": "https://ko-fi.com/amronos",
                "modmenu.modrinth": "https://modrinth.com/mod/automatedworkstations"
            },
            "update_checker": true
        }
    }
}
